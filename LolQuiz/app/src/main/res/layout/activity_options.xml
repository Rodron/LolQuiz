<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#165F98"
    tools:context=".OptionsActivity">

    <View
        android:id="@+id/view"
        android:layout_width="325dp"
        android:layout_height="506dp"
        android:layout_marginTop="114dp"
        android:background="#FAE634"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/category2"
        android:layout_width="298dp"
        android:layout_height="43dp"
        android:fontFamily="@font/friz_quadrata"
        android:text="Lore del juego"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category1" />

    <CheckBox
        android:id="@+id/category1"
        android:layout_width="298dp"
        android:layout_height="49dp"
        android:fontFamily="@font/friz_quadrata"
        android:text="Campeones y habilidades"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryOpt" />

    <View
        android:id="@+id/optionsTitleBackground"
        android:layout_width="396dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:background="#1C9E71"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/optionsTitle"
        android:layout_width="291dp"
        android:layout_height="34dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/friz_quadrata_bold"
        android:text="Opciones"
        android:textAlignment="center"
        android:textColor="#DDDDDD"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/optionsTitleBackground" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="48dp"
        android:layout_height="41dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/optionsTitleBackground"
        app:layout_constraintTop_toTopOf="@+id/optionsTitleBackground"
        app:srcCompat="@drawable/abc_vector_test" />

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="283dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:max="9"
        android:progress="9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionN" />

    <Spinner
        android:id="@+id/spinnerTheme"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="13dp"
        android:fontFamily="@font/friz_quadrata_bold"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/theme" />

    <Switch
        android:id="@+id/music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/friz_quadrata"
        android:text="MÚSICA"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/category2" />

    <TextView
        android:id="@+id/questionN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/friz_quadrata"
        android:text="NÚMERO DE PREGUNTAS"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/music" />

    <TextView
        android:id="@+id/categoryOpt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/friz_quadrata"
        android:text="CATEGORÍAS"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/spinnerTheme" />

    <TextView
        android:id="@+id/theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/friz_quadrata"
        android:text="TEMA"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

</androidx.constraintlayout.widget.ConstraintLayout>