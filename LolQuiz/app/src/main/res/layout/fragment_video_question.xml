<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdgeLength="@dimen/material_emphasis_high_type"
    tools:context=".VideoQuestionFragment"
    tools:ignore="ExtraText">

    <Button
        android:id="@+id/option1"
        android:layout_width="249dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:text="Opción 1"
        android:textColor="#000000"
        android:textSize="12sp"
        app:backgroundTint="#FAE634"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question" />

    <VideoView
        android:id="@+id/video"
        android:layout_width="278dp"
        android:layout_height="171dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toEndOf="@+id/photoBorder"
        app:layout_constraintStart_toStartOf="@+id/photoBorder"
        app:layout_constraintTop_toTopOf="@+id/photoBorder" />

    <View
        android:id="@+id/photoBorder"
        android:layout_width="278dp"
        android:layout_height="151dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/border"
        app:backgroundTint="#EAE634"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/questionBackground"
        android:layout_width="360dp"
        android:layout_height="70dp"
        android:background="#224163"
        app:backgroundTint="#EAE634"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoBorder" />

    <View
        android:id="@+id/questionBackgroundBorder"
        android:layout_width="362dp"
        android:layout_height="70dp"
        android:background="@drawable/border"
        app:backgroundTint="#EAE634"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/questionBackground" />

    <Button
        android:id="@+id/option2"
        android:layout_width="249dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="Opción 2"
        android:textColor="#000000"
        android:textSize="12sp"
        app:backgroundTint="#FAE634"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option1" />

    <Button
        android:id="@+id/option4"
        android:layout_width="249dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="Opción 4"
        android:textColor="#000000"
        android:textSize="12sp"
        app:backgroundTint="#FAE634"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option3"
        app:layout_constraintVertical_bias="0.007" />

    <Button
        android:id="@+id/option3"
        android:layout_width="249dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="Opción 3"
        android:textColor="#000000"
        android:textSize="12sp"
        app:backgroundTint="#FAE634"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option2" />

    <TextView
        android:id="@+id/question"
        android:layout_width="347dp"
        android:layout_height="56dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/border"
        android:fontFamily="@font/friz_quadrata_bold"
        android:text="¿Qué personaje no proviene de esta región de Runaterra?"
        android:textAlignment="center"
        android:textColor="#DDDDDD"
        android:textColorLink="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/questionBackgroundBorder" />

    <TextView
        android:id="@+id/videoMsg"
        android:layout_width="148dp"
        android:layout_height="38dp"
        android:layout_marginTop="58dp"
        android:fontFamily="@font/friz_quadrata"
        android:text="Toca aquí para ver el vídeo"
        android:textAlignment="center"
        android:textColor="#DDDDDD"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/photoBorder" />

    <!--
    <View
        android:id="@+id/view2"
        android:layout_width="279dp"
        android:layout_height="86dp"
        app:layout_constraintBottom_toBottomOf="@+id/photoBorder"
        app:layout_constraintEnd_toEndOf="@+id/video"
        app:layout_constraintStart_toStartOf="@+id/photoBorder"
    -->

    />

</androidx.constraintlayout.widget.ConstraintLayout>